<?xml version="1.0" encoding="utf-8"?>
<resources>
	<color name="black">#000000</color>
	<color name="nearWhite">#F0F0F0</color>
	<color name="brown">#996633</color>
    <color name="blue">#6699CC</color>
    <color name="darkgrey">#333333</color>
    <color name="lightgrey">#999999</color>
    <color name="white">#FFFFFF</color>
    
    <style name="Theme" parent="android:Theme.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:cacheColorHint">@color/nearWhite</item>
    	<item name="android:background">@color/nearWhite</item>
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:windowBackground">@color/nearWhite</item>
    </style>
	<style name="BrownSkin" parent="android:Theme">
        <item name="android:textColor">@color/black</item>
        <item name="android:cacheColorHint">@color/brown</item>
    	<item name="android:background">@color/brown</item>
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:windowBackground">@color/brown</item>
    </style>
    <style name="BrownSkin.bottomListText">
    	<item name="android:textColor">@color/darkgrey</item>
    </style>
    <style name="BlueSkin" parent="android:Theme">
        <item name="android:textColor">@color/black</item>
        <item name="android:cacheColorHint">@color/blue</item>
    	<item name="android:background">@color/blue</item>
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:windowBackground">@color/blue</item>
    </style>
    <style name="Theme.Dialog" parent="android:style/Theme.Dialog"></style>
    <style name="DarkSkin" parent="android:Theme">
        
        <item name="android:cacheColorHint">@color/black</item>
    	<item name="android:background">@color/black</item>
    	<item name="android:windowNoTitle">true</item>
    	<item name="android:windowBackground">@color/black</item>
    </style>
    <style name="DarkSkin.bottomListText">
    	<item name="android:textColor">@color/darkgrey</item>
    </style>
</resources>
